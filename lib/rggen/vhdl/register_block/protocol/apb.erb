    LOCAL_ADDRESS_WIDTH => <%= local_address_width %>,
    BUS_WIDTH           => <%= bus_width %>,
    REGISTERS           => <%= total_registers %>,
    PRE_DECODE          => <%= pre_decode %>,
    BASE_ADDRESS        => <%= base_address %>,
    BYTE_SIZE           => <%= byte_size %>,
    ERROR_STATUS        => <%= error_status %>,
    INSERT_SLICER       => <%= insert_slicer %>
