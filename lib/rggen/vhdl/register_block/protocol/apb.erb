  port map (
    i_clk                 => <%= register_block.clock %>,
    i_rst_n               => <%= register_block.reset %>,
    i_psel                => <%= psel %>,
    i_penable             => <%= penable %>,
    i_paddr               => <%= paddr %>,
    i_pprot               => <%= pprot %>,
    i_pwrite              => <%= pwrite %>,
    i_pstrb               => <%= pstrb %>,
    i_pwdata              => <%= pwdata %>,
